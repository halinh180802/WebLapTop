@model IEnumerable<WebLapTop.Models.GioHang>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đặt Hàng</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.malaptop)*@
        <th>Mã LapTop</th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.tenlaptop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dThanhTien)
        </th>
